{
  "name": "alephconverter-2",
  "version": "1.1.0",
  "main": "main.js",
  "type": "commonjs",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder -p always"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/Alephnull010/AlephConverter2.git"
  },

  "build": {
    "appId": "com.alephconverter2.app",
    "productName": "AlephConverter 2",

    "publish": [
      {
        "provider": "github",
        "owner": "Alephnull010",
        "repo": "AlephConverter2"
      }
    ],

    "directories": {
      "output": "dist"
    },

    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "bin/ffmpeg.exe"
      }
    ],

    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*"
    ],

    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },

    "nsis": {
      "include": "build/installer/installer.nsh",
      "perMachine": false,
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "warningsAsErrors": false,
      "deleteAppDataOnUninstall": true,
      "installerLanguages": null,
      "runAfterFinish": false,
      "packElevateHelper": false,
      "removeDefaultUninstallWelcomePage": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AlephConverter 2"
    }
  },

  "dependencies": {
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "yt-dlp-wrap": "^2.3.12",
    "electron-updater": "^6.3.0"
  },

  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^25.0.0"
  }
}
